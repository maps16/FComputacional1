#LIBRERIAS
import numpy as np
from scipy.integrate import quad

#Constantes del problema.
l = 4     #Longitud Del Pendulo
g = 9.81  #Gravedad
n = 50
theta_0 =np.linspace(0, np.pi, n)

#Caso de oscilaciones pequenas
T_o = 2 * np.pi*np.sqrt(l/g)


#Para Oscilaciones grandes

#Calculo de la integral
inte = lambda x, k : 1 /(np.sqrt(np.cos(x)-np.cos(k))+0.1)

for i in range(n):
    res , err = quad(inte, 0, theta_0[i], args=(theta_0[i]))
    k = 4*np.sqrt(l/(2*g)) * res
    T = [k]
